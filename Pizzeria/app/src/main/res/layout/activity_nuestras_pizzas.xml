<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityNuestrasPizzas">

    <TextView
        android:id="@+id/textViewIngredientes"
        android:layout_width="180dp"
        android:layout_height="28dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="180dp"
        android:fontFamily="@font/audiowide"
        android:text="Ingredientes:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GrupoPizzas" />

    <TextView
        android:id="@+id/textViewTamaños"
        android:layout_width="130dp"
        android:layout_height="28dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/audiowide"
        android:text="Tamaños:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/GrupoPizzas"
        android:layout_width="161dp"
        android:layout_height="328dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintEnd_toStartOf="@+id/GrupoTamaños"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPizzas">

        <RadioButton
            android:id="@+id/radioButtonPizza1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:fontFamily="@font/audiowide"
            android:onClick="onClick"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonPizza2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:fontFamily="@font/audiowide"
            android:onClick="onClick"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonPizza3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:fontFamily="@font/audiowide"
            android:onClick="onClick"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonPizza4"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:fontFamily="@font/audiowide"
            android:onClick="onClick"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonPizza5"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:fontFamily="@font/audiowide"
            android:onClick="onClick"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonPizza6"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:fontFamily="@font/audiowide"
            android:onClick="onClick"
            android:textSize="20sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textViewPizzas"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="96dp"
        android:fontFamily="@font/audiowide"
        android:text="Pizzas:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewTamaños"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/GrupoTamaños"
        android:layout_width="167dp"
        android:layout_height="165dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTamaños">

        <RadioButton
            android:id="@+id/radioButtonFamiliar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:fontFamily="@font/audiowide"
            android:onClick="onClick"
            android:text="Familiar"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonGrande"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:fontFamily="@font/audiowide"
            android:onClick="onClick"
            android:text="Grande"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonMediana"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:fontFamily="@font/audiowide"
            android:onClick="onClick"
            android:text="Mediana"
            android:textSize="20sp" />

    </RadioGroup>

    <Button
        android:id="@+id/btnAñadirPizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="120dp"
        android:fontFamily="@font/audiowide"
        android:onClick="onClick"
        android:text="Añadir Pizza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewIngrSeleccionado" />

    <Button
        android:id="@+id/btnFinalizarPrdido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="152dp"
        android:fontFamily="@font/audiowide"
        android:onClick="onClick"
        android:text="Finalizar pedido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAñadirPizza" />

    <TextView
        android:id="@+id/textViewIngrSeleccionado"
        android:layout_width="330dp"
        android:layout_height="61dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/audiowide"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewIngredientes" />

</androidx.constraintlayout.widget.ConstraintLayout>