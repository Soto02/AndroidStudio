<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnPuntuacion"
        android:layout_width="162dp"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        android:fontFamily="monospace"
        android:text="Puntuacion"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnConfiguracion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnJugar" />

    <Button
        android:id="@+id/btnConfiguracion"
        android:layout_width="161dp"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        android:fontFamily="monospace"
        android:text="Configuracion"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnSalir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPuntuacion" />

    <Button
        android:id="@+id/btnJugar"
        android:layout_width="161dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="monospace"
        android:text="Jugar"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnPuntuacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entrenaMemoria" />

    <TextView
        android:id="@+id/entrenaMemoria"
        android:layout_width="292dp"
        android:layout_height="59dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="monospace"
        android:text="ENTRENA TU MEMORIA"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/btnJugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="162dp"
        android:layout_height="0dp"
        android:layout_marginBottom="206dp"
        android:fontFamily="monospace"
        android:text="Salir"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConfiguracion" />
</androidx.constraintlayout.widget.ConstraintLayout>